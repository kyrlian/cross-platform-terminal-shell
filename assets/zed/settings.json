// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "assistant": {
    "default_model": {
      "provider": "ollama",
      "model": "granite3.1-dense:8b"
    },
    "inline_alternatives": [
      {
        "provider": "ollama",
        "model": "starcoder2:3b"
      },
      {
        "provider": "ollama",
        "model": "granite3.1-moe:3b"
      }
    ],
    "dock": "left",
    "version": "2"
  },
  "outline_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "base_keymap": "VSCode",
  "ui_font_size": 16,
  "buffer_font_size": 14,
  "theme": {
    "mode": "system",
    "light": "Summercamp",
    "dark": "Summercamp"
  },
  "autosave": "on_focus_change",
  "formatter": "language_server",
  "languages": {
    "Python": {
      "tab_size": 4,
      "formatter": "language_server",
      "format_on_save": "on"
    }
  },
  "terminal": {
    "detect_venv": {
      "on": {
        "directories": [
          ".env",
          "env",
          ".venv",
          "venv"
        ],
        "activate_script": "default"
      }
    },
    "shell": {
      "program": "/opt/homebrew/bin/nu"
    }
  }
}
